{% extends 'base.html.twig' %}

{% block body %}
    <h1>Log</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log.id }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ log.userid }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ log.text }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{% if log.timestamp %}{{ log.timestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Io_bit</th>
                <td>{{ log.iobit }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_log_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_log_edit', { 'id': log.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
